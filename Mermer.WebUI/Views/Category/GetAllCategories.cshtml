@model List<Mermer.Entity.Concrete.Category>
@{
    ViewBag.Title = "GetAllCategories";
    Layout = "../Shared/_LayoutAdmin.cshtml";
}

@section head
{
    <link href="~/Content/AdminDatatables/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/AdminDatatables/datatables.bootstrap.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet light flip-scroll">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">Kategoriler</span>
                </div>
            </div>
            <div class="portlet-body">

                <table class="table table-striped table-bordered table-hover table-header-fixed" id="sample_1">
                    <thead>
                        <tr class="">
                            <th>Id</th>
                            <th>Adı</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="datas">
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td><a href="@Url.Action("EditCategory","Category",new {id=item.Id})"><i style="color:greenyellow" class="fa fa-book"></i></a></td>
                                <td><a href="@Url.Action("RemoveCategory","Category",new {id=item.Id})"><i style="color:Red" class="fa fa-trash"></i></a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>

@section scripts
{
    <script src="~/Scripts/AdminDatatables/datatable.min.js"></script>
    <script src="~/Scripts/AdminDatatables/datatables.min.js"></script>
    <script src="~/Scripts/AdminDatatables/datatables.bootstrap.js"></script>
    <script src="~/Scripts/AdminDatatables/table-datatables-fixedheader.min.js"></script>
}